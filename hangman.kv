#:kivy 1.9.1
#: import hex kivy.utils.get_color_from_hex

<HangmanBoard>:
    # Background
    canvas:
        Color:
            rgba: hex('#963e48')
        Rectangle:
            pos: self.pos
            size: self.size

    # Borders
        Color:
            rgba: hex('#FFD700')
        # Horizontal lines
        Line:
            points: 0, 10, root.width, 10
        Line:
            points: 0, 15, root.width, 15
        Line:
            points: 0, root.top-10, root.width, root.top-10
        Line:
            points: 0, root.top-15, root.width, root.top-15

        # Vertical lines
        Line:
            points: 10, 0, 10, root.top
        Line:
            points: 15, 0, 15, root.top
        Line:
            points: root.width-10, 0, root.width-10, root.top
        Line:
            points: root.width-15, 0, root.width-15, root.top

    orientation: 'vertical'

    Button:
        size_hint: 0.92, 0.03
        background_normal: ''
        background_down:''
        background_color: 0,0,0,0
    Button:
        id: label1
        size_hint: 0.92, 0.096
        bold: True
    Button:
        id: label2
        #text: 'The Gallows'
        size_hint: 0.92, 0.384
    Button:
        id: label3
        size_hint: 0.92, 0.192
        pos_hint: {'center_x':0.5}
        halign: 'center'
        valign: 'top'
        font_size: 40
        text_size: self.size
    GridLayout:
        cols: 10
        id: label4
        size_hint: 0.92, 0.288
        pos_hint: {'center_x':0.5}
        Button:
            id: buttonA
            text: 'A'
            on_press: root.letter_click(self)
